{
  "name": "@evolvedbinary/prosemirror-lwdita-localization",
  "version": "2.4.0",
  "description": "Localization for LwDITA in ProseMirror",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20.1.0 <21",
    "yarn": ">=4.2.2"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "prepack": "yarn run build",
    "test": "mocha",
    "test:watch": "mocha -w",
    "coverage": "rimraf coverage && nyc yarn mocha",
    "coveralls": "nyc --reporter=text-lcov report | coveralls",
    "generate-docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evolvedbinary/prosemirror-lwdita.git"
  },
  "keywords": [
    "ProseMirror",
    "LwDITA",
    "DITA",
    "XDITA",
    "XML",
    "JDITA",
    "JSON",
    "i18n"
  ],
  "author": "Evolved Binary",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/evolvedbinary/prosemirror-lwdita/issues"
  },
  "homepage": "https://github.com/evolvedbinary/prosemirror-lwdita#readme",
  "directories": {
    "src": "./src",
    "test": "./test"
  },
  "files": [
    "lib",
    "scripts",
    "index.js"
  ],
  "dependencies": {
    "@types/node-polyglot": "^2.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.9",
    "mocha": "^10.7.3",
    "node-polyglot": "^2.6.0",
    "nyc": "^17.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.10",
    "typedoc-plugin-missing-exports": "^3.0.0",
    "typescript": "5.6.3"
  },
  "packageManager": "yarn@4.2.2"
